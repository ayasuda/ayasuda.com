<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <base href="<%= basename %>">
    <title>ayasuda.github.io<%= "- #{tag}" if defined? tag %></title>
    <link rel="stylesheet" href="/css/style.css">
    <!-- Global site tag (gtag.js) - Google Analytics -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=UA-138223597-1"></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());
      gtag('config', 'UA-138223597-1');
    </script>
  </head>
  <body>
    <header class="site-header">
      <h1><a href="/">ayasuda.github.io</a></h1>
    </header>
    <article class="index">
      <% if defined? tag %>
        <h1>Tag: <%= tag %></h1>
      <% end %>
      <ul>
        <% pages.each do |page| %>
          <li>
            <a href="<%= page.path %>"><%= page.title %></a>
            <div class="content-meta">
              <div class="published"><%= page.to_date %></div>
              <ul class="keywords">
                <% page.tags.each do |tag| %>
                  <li><a href="/pages/tags/<%= tag %>.html"><%= tag %></a></li>
                <% end %>
              </ul>
              <p><%= page.description %></p>
            </div>
          </li>
        <% end %>
      </ul>
    </article>
    <footer>
      <a href="/">Home</a>
    </footer>
  </body>
</html>
